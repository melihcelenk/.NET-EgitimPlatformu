
@{
    ViewBag.Title = "Index";
}


@model EgitimPlatformu.Controllers.AnasayfaDTO

<div class="row">
    <div class="col-lg-12">
        <h2>İçerikler</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Gönderim Tarihi</th>
                        <th>Konu</th>
                        <th>Anlatım Şekli</th>
                        <th>Kullanıcı</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.icerik)
                    {
                    <tr>
                        <td>@item.IcerikId</td>
                        <td>@item.IcerikAd</td>
                        <td> @if (item.Aciklama.Length >= 200)
                        {
                            @item.Aciklama.Substring(0, 200)
                        }
                        else
                        { @item.Aciklama  }...</td>
                        <td>@item.GonderimTarihi.Value.ToShortDateString()</td>
                        <td>@item.Konular.KonuAdi</td>
                        <td>@item.AnlatimSekilleri.AnlatimSekliAdi</td>
                        <td>@item.Kullanicilar.KullaniciAdi</td>
                        <td><a href="~/admin/IcerikDuzenle?id=@item.IcerikId" class="form-control btn btn-warning">Düzenle</a></td>
                        <td>
                            @* <a href="~/admin/IcerikSil?id=@item.IcerikId" class="form-control btn btn-danger">Sil</a>*@

                            <form action="~/admin/Index" method="post">
                                <input type="hidden" name="icerikID" value="@item.IcerikId" />
                                <input type="submit" value="Sil" class="form-control btn btn-danger" />
                                
                            </form>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
   
</div>
